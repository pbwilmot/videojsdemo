doctype html
html
  head
    include ./includes/header.jade
case type
  when 'FLASH'
    include ./includes/partials/flow-container.jade
  when 'VIDEO360'
    include ./includes/partials/video360-container.jade    
  default
    body(style='margin:0; overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px')
      #BuzzAdDiv
        if (mobile)
          img(src='#{poster}', id='mobile-play-overlay', style='margin:0; overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px; z-index:300000')
        if (type == 'VIDEO')
          video#content_video.video-js.vjs-big-play-centered.vjs-default-skin(poster='#{poster}', controls='', preload='auto', style='width:100%; height:100vh')
          source(src='//da2hw5uyqeo5b.cloudfront.net/blank.mp4', type='video/mp4')
      if (social)
        include ./includes/partials/social-btns.jade
      script(type='text/javascript').
        document.addEventListener("DOMContentLoaded",function() {
          BUZZADMANAGER.BuzzAdManager('BuzzAdDiv', false, !{options});
        });
      if(social)
        script(type="text/javascript").
          document.addEventListener("DOMContentLoaded",function() {
            loadSocialBtns('#{type}','#{source}');
          });