html
	head
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='/static/style/setup/style.css')
	body
		#setup-container.container
			nav.navbar.navbar-default
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
							span.sr-only
								| Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/setup') Buzzstarter
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									| SETUP
									span.caret
		#setup.container
			form#setup-form
				select#verticle
					option(value='female') female
				ul
					li
						label(for='type') Vine
						input.choose-type(name='type', value='VINE', type='radio')
						label(for='type') Youtube
						input.choose-type(name='type', value='YOUTUBE', type='radio')
						label(for='type') TWITCH
						input.choose-type(name='type', value='TWITCH', type='radio')
					li#vine.li-type
						| Vine Url
						input.form-control(name='src', value='')
						|             Auto Play
						input(type='radio', name='autoplay', value='Yes')
						| Yes
						input(type='radio', name='autoplay', value='No')
						|  No
						|             Auto close
						input(type='radio', name='autoclose', value='Yes')
						| Yes
						input(type='radio', name='autoclose', value='No')
						|  No
						|             Auto mute
						input(type='radio', name='automute', value='Yes')
						| Yes
						input(type='radio', name='automute', value='No')
						|  No
					li#youtube.li-type
						label(for='src') Youtube src
						input.form-control(name='src', value='')
						|             Auto Play
						input(type='radio', name='autoplay', value='Yes')
						| Yes
						input(type='radio', name='autoplay', value='No')
						|  No
					li#twitch.li-type
						label(for='src') Twitch src
						input.form-control(name='src')
						|             Auto Play
						input(type='radio', name='autoplay', value='Yes')
						| Yes
						input(type='radio', name='autoplay', value='No')
						|  No
					li
						button.btn.btn-block.btn-primary(value='submit')
							| SUBMIT

		div#content
			
		script(src='https://code.jquery.com/jquery-2.2.1.min.js')
		script(src='static/javascript/controllers/setup.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
