shtml
  head
    link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css")
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/static/style/setup/style.css')
  body
    nav
      .nav-wrapper.center-align
        a.buzz-logo(href='#') Buzzstarter
    .row

      #setup.container.col.m3
        .row.tabs-container
          .col.s12
            ul.tabs
              li.tab.col.s6
                a(href='#option1') Setup
              li.tab.col.s6
                a(href='#option2') Metrics
        .row
          .col.s12
            .card#option1
              .card-content
                form#setup-form
                  .row
                    .input-field.col.s12
                      select#verticle(required)
                        option(value='', disabled, selected) Choose your option
                        option(value='male-lifestyle-post') Male Lifestyle
                        option(value='female-lifestyle-post') Female Lifestyle
                        option(value='business-post') Business
                        //- option(value='health-wellness-post') Health & Wellness
                        option(value='tech-post') Tech
                        //- option(value='entertainment-post') Entertainment
                        //- option(value='style-beauty-post') Style & Beauty
                        //- option(value='news-post') News
                        //- option(value='foods-post') Foods
                        //- option(value='auto-post') Auto
                        option(value='gaming-post') Gaming
                        //- option(value='multi-cultural-post') Multi-Cultural
                      label VERTICLE
                  .row
                    .input-field.col.s12
                      select#type(required)
                        option(value='', disabled='', selected='') Choose your option
                        option(value='TWITCH' name='type') Twitch
                        option(value='YOUTUBE' name='type') YouTube
                        option(value='VINE' name='type') Vine
                        option(value='VIDEO' name='type') Hosted Video
                      label CHANNEL
                  .row
                    .input-field.col.s12
                        input#src(name='src', type='text' placeholder='Enter Your URL')
                        label(for='src') URL
                  .row#input-poster
                    .input-field.col.s12
                      input#poster(name='poster', type='text' placeholder='Enter Your Poster Image')
                      label(for='poster') Poster
                  .row
                    .input-field.col.s12 AUTO PLAY
                      br
                      input#autoplaytrue(name='autoplay', type='radio' value="true")
                      label(for='autoplaytrue') on
                      input#autoplayfalse(name='autoplay', type='radio' value="false")
                      label(for='autoplayfalse') off
                  .row
                    .input-field.col.s12 AUTO MUTE
                      br
                      input#automutetrue(name='automute', type='radio' value="true")
                      label(for='automutetrue') on
                      input#automutefalse(name='automute', type='radio' value="false")
                      label(for='automutefalse') off
                  .row
                    .input-field.col.s12 PLAY AUDIO ON HOVER
                      br
                      input#audiohovertrue(name='audiohover', type='radio' value="true")
                      label(for='audiohovertrue') on
                      input#audiohoverfalse(name='audiohover', type='radio' value="false")
                      label(for='audiohoverfalse') off
                  .card-action
                    button.btn.waves-effect.waves-light.btn-submit(type='submit') Submit
          .col.s12
            .card#option2
              .card-content.center-align
                h5.metrics-header Events Fired
                p#event-Playing.event-non-fired Playing
                p#event-Firstquartile.event-non-fired First Quartile
                p#event-Midpoint.event-non-fired Midpoint
                p#event-Thirdquartile.event-non-fired Third Quartile
                p#event-Ended.event-non-fired Ended
                p#event-Complete.event-non-fired Complete
                hr
                p#event-Paused.event-non-fired Pause
                p#event-Resume.event-non-fired Resume
                //- p#event-error.event-non-fired Twitch: Error
                //- p#event-adstart.event-non-fired Twitch: Ad Start
                //- p#event-adend.event-non-fired Twitch: Ad End
      div#content.col.m9
        .progress
          .indeterminate

    script(src='//code.jquery.com/jquery-2.1.2.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js')
    script(src='/static/javascript/controllers/setup.js')
    script(src='/static/javascript/callbacks.js')
